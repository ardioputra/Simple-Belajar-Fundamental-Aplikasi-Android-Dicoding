<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailUser">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/png_foto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:civ_border_color="#FF909090"
        app:civ_border_width="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_txt"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/png_foto"
        android:text="@string/username"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_txt"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/name_user" />

    <TextView
        android:id="@+id/follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_user"
        android:layout_marginTop="75dp"
        android:text="@string/follower"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/follower"
        android:layout_marginTop="10dp"
        android:text="@string/following"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/following"
        android:layout_marginTop="10dp"
        android:text="@string/location"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_marginTop="10dp"
        android:text="@string/company"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/repository"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/company"
        android:layout_marginTop="10dp"
        android:text="@string/repository"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>